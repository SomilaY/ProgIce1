<Window x:Class="WordGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Scramble Game" Height="350" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Word Scramble Game" FontSize="20" Margin="0,0,0,10"/>
            <TextBlock Text="Scrambled Word:" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock x:Name="scrambledWordText" FontSize="24" FontWeight="Bold"/>
            <TextBox x:Name="userInputTextBox" Margin="0,10" Width="200"/>
            <Button Content="PLAY" Click="PlayButton_Click"/>
            <Button Content="CHECK" Click="CheckButton_Click" Margin="0,5"/>
            <Button Content="CLEAR" Click="ClearButton_Click" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>

